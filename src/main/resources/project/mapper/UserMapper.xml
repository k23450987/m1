<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.mapper.UserMapper">
	<resultMap type="project.domain.User" id="UserRM">
		<id property="user_id" column="user_id" />
		<result property="username" column="username" />
		<result property="password" column="password" />
	</resultMap>
	<select id="login" parameterType="map" resultMap="UserRM">
		SELECT 
		  * 
		FROM
		  USER u 
		WHERE 
		u.username = #{username} 
		AND 
		u.password = #{password}
	</select>
	<select id="check" parameterType="string" resultType="string">
		SELECT 
		  username 
		FROM
		  USER 
		WHERE username = #{username}
	</select>
	<insert id="reg" parameterType="project.domain.User">
		INSERT INTO USER (username, password) 
		VALUES
		(#{username},#{password})
	</insert>
</mapper>